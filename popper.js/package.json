{
  "name": "@dnb-hugo-libraries/popper.js",
  "description": "Popper.js for Hugo",
  "version": "1.1.12",
  "author": "Patrick Kollitsch <patrick@davids-neighbour.com>",
  "bugs": {
    "url": "https://github.com/dnb-hugo/libraries/issues"
  },
  "commitlint": {
    "extends": [
      "@dnb-hugo/commitlint-config"
    ]
  },
  "devDependencies": {
    "@dnb-hugo/remark-config": "2.0.13",
    "@dnb-hugo/standard-version-config": "2.0.12",
    "@dnb-hugo/textlint-config": "2.0.12"
  },
  "homepage": "https://github.com/dnb-hugo/libraries/tree/master/popper.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "release": "standard-version --release-as patch -a -t \"popper.js/v\" --releaseCommitMessageFormat \"chore(release): popper.js/v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release:major": "standard-version --release-as major -a -t \"popper.js/v\" --releaseCommitMessageFormat \"chore(release): popper.js/v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release:next": "standard-version --release-as minor -a -t \"popper.js/v\" --releaseCommitMessageFormat \"chore(release): popper.js/v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "remark": "remark"
  }
}
